// Zellij configuration
// Docs: https://zellij.dev/documentation/configuration
//
// NOTE: ~/.config/zellij/ is symlinked to this directory (dotfiles/config/zellij/)
// Edit this file directly - do NOT create symlinks for individual files

keybinds {
    shared_except "locked" {
        // chaning "ctrl g" to "alt g" because Conflicts with VSCode quick open and Claude Code
        unbind "Ctrl g"
        bind "Alt g" { SwitchToMode "Locked"; }
    }
    shared {

        // Disable Ctrl+b (Tmux mode) - conflicts with other tools
        unbind "Ctrl b"
    }
    locked {
     // chaning "ctrl g" to "alt g" because Conflicts with VSCode quick open and Claude Code
     unbind "Ctrl g" 
     bind "Alt g" { SwitchToMode "Normal"; }
    }
}

// Clipboard (Linux) - Zellij doesn't auto-detect clipboard on Linux
// X11: xclip -selection clipboard
// Wayland: wl-copy
copy_command "xclip -selection clipboard"
copy_on_select true

// General settings
pane_frames true
simplified_ui true
default_layout "compact"
show_startup_tips false

ui {
    pane_frames {
        hide_session_name true
        rounded_corners true
    }
}
