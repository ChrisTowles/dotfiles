// example layouts: https://zellij.dev/documentation/layout-examples.html?search=tips

layout {
    // Top tab bar
    pane size=1 borderless=true {
        plugin location="zellij:tab-bar"
    }
    pane split_direction="vertical" size="60%" {
        name "main";
    }
    pane split_direction="horizontal" size="40%" stacked=true {
        pane {
            name "tasks";
        }

    }

    // status bar at bottom
    pane size=1 borderless=true {
        plugin location="zellij:status-bar"
    }
}